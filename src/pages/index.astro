/* Entry animations - theatrical hero entrance */

/* Photo card: drops in with bounce overshoot */
@keyframes dropBounce {
  0% {
    opacity: 0;
    transform: translateY(-80px) rotate(-8deg);
  }
  50% {
    opacity: 1;
    transform: translateY(8px) rotate(-3deg);
  }
  70% {
    transform: translateY(-4px) rotate(-4.5deg);
  }
  100% {
    opacity: 1;
    transform: translateY(0) rotate(-4deg);
  }
}

/* Heading blocks: clip-path wipe reveal from left */
@keyframes wipeReveal {
  from {
    clip-path: inset(0 100% 0 0);
    opacity: 0;
  }
  to {
    clip-path: inset(0 0 0 0);
    opacity: 1;
  }
}

/* Description/CTA: slide up with slight overshoot */
