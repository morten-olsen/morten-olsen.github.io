<script>
  // Simple parallax using CSS custom properties
  const parallaxYElements = document.querySelectorAll('[data-parallax]');
  const parallaxXElements = document.querySelectorAll('[data-parallax-x]');

  function updateParallax() {
    const scrollY = window.scrollY;

    parallaxYElements.forEach((el) => {
      const speed = parseFloat(el.dataset.parallax) || 0.1;
      const yOffset = scrollY * speed;
      el.style.setProperty('--parallax-y', `${yOffset}px`);
    });

    parallaxXElements.forEach((el) => {
      const speed = parseFloat(el.dataset.parallaxX) || 0.1;
      const xOffset = scrollY * speed;
      el.style.setProperty('--parallax-x', `${xOffset}px`);
    });
  }

  window.addEventListener('scroll', updateParallax, { passive: true });
  updateParallax();
</script>

