---
import { Picture } from "astro:assets";
import AbsoluteTime from "~/components/base/time/AbsoluteTime.astro";
import Html from "~/components/page/Html.astro";
import { data } from "~/data/data"

const { Content, ...profile } = data.profile;
const posts = await data.posts.getPublished();
const currentExperience = await data.experiences.getCurrent();
const jsonLd = await profile.getJsonLd();
---

<Html
  title={profile.name}
  description={profile.name}
  jsonLd={jsonLd}
  hideHeader
>
  <section class="hero">
    <!-- Floating decorations -->
    <div class="deco deco-rect-1"></div>
    <div class="deco deco-rect-2"></div>
    <div class="deco deco-rect-3"></div>
    <div class="deco deco-star-1"></div>
    <div class="deco deco-star-2"></div>
    <div class="deco deco-circle"></div>

    <!-- Main content -->
    <div class="hero-inner">
      <!-- Photo card floating left -->
      <div class="photo-card">
        <Picture
          alt='Profile picture'
          src={profile.image}
          formats={['avif', 'webp', 'jpeg']}
          fetchpriority="high"
          widths={[300, 400, 500]}
        />
        <div class="photo-label">Morten</div>
      </div>

      <!-- Center content -->
      <div class="hero-center">
        <h1 class="hero-headline">
          <span>Software</span>
          <span>Engineer</span>
        </h1>
        <p class="hero-desc">I make computers do questionable things.</p>
        <a href="/about/" class="hero-cta">About & CV →</a>
      </div>

    </div>

    <!-- Floating badges -->
    <div class="floating-badge badge-location">Copenhagen</div>
    <div class="floating-badge badge-arrow">→</div>

    <!-- Scroll to writing -->
    <a href="#writing" class="scroll-btn">
      <span>Writing</span>
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
        <path d="M12 5v14M5 12l7 7 7-7" stroke="currentColor" stroke-width="3"/>
      </svg>
    </a>
  </section>

  <main class="main">

    <section class="posts-section" id="writing">
      <h2 class="section-title">Writing</h2>

      <div class="posts">
        {posts.map((post, index) => (
          <article class={`post ${index === 0 ? 'featured' : ''}`} data-fadein>
            <a href={`/posts/${post.id}`} class="post-link">
              <div class="post-image">
                <Picture
                  alt='thumbnail image'
                  src={post.data.heroImage}
                  formats={['avif', 'webp', 'jpeg']}
                  fetchpriority={index === 0 ? "high" : "auto"}
                  widths={[200, 400, 600]}
                />
              </div>
              <div class="post-content">
                <h3>{post.data.title}</h3>
                <div class="post-meta">
                  <AbsoluteTime
                    datetime={post.data.pubDate}
                    format={{ month: "short", year: "numeric" }}
                  /> · {post.readingTime} min
                </div>
              </div>
            </a>
          </article>
        ))}
      </div>
    </section>
  </main>
</Html>

<script src="../scripts/fadein.ts"></script>

<style>
.main {
  max-width: var(--content-width);
  margin: 0 auto;
  padding: 0 30px 80px;
}

/* Hero section - full width */
.hero {
  position: relative;
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: calc(var(--gap) * 2);
  overflow: visible;
  background-image:
    linear-gradient(rgba(0, 0, 0, 0.05) 1px, transparent 1px),
    linear-gradient(90deg, rgba(0, 0, 0, 0.05) 1px, transparent 1px);
  background-size: 40px 40px;
}

/* Floating decorations */
.deco {
  position: absolute;
  border: var(--border-width) solid var(--border-color);
  z-index: 1;
}

.deco-rect-1 {
  width: 180px;
  height: 180px;
  background: var(--accent-primary);
  top: 8%;
  left: calc(50% - 550px);
  transform: rotate(-8deg);
}

.deco-rect-2 {
  width: 120px;
  height: 200px;
  background: var(--accent-tertiary);
  bottom: 10%;
  right: calc(50% - 580px);
  transform: rotate(6deg);
}

.deco-rect-3 {
  width: 200px;
  height: 80px;
  background: var(--accent-lime);
  bottom: 20%;
  left: calc(50% - 500px);
  transform: rotate(-4deg);
}

/* Star shapes */
.deco-star-1,
.deco-star-2 {
  border: none;
  clip-path: polygon(
    50% 0%, 61% 35%, 98% 35%, 68% 57%,
    79% 91%, 50% 70%, 21% 91%, 32% 57%,
    2% 35%, 39% 35%
  );
}

.deco-star-1 {
  width: 80px;
  height: 80px;
  background: var(--accent-secondary);
  top: 15%;
  right: calc(50% - 450px);
}

.deco-star-2 {
  width: 50px;
  height: 50px;
  background: var(--accent-lavender);
  bottom: 30%;
  left: calc(50% - 400px);
}

.deco-circle {
  width: 100px;
  height: 100px;
  background: var(--accent-secondary);
  top: 60%;
  right: calc(50% - 520px);
  border-radius: 50%;
}

/* Hero inner container */
.hero-inner {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: calc(var(--gap) * 3);
  max-width: 1000px;
  width: 100%;
  position: relative;
  z-index: 10;
}

/* Photo card */
.photo-card {
  position: relative;
  background: var(--card-bg);
  padding: var(--gap);
  border: var(--border-width) solid var(--border-color);
  box-shadow: var(--shadow-brutal-lg);
  transform: rotate(-4deg);
  flex-shrink: 0;

  img {
    display: block;
    width: 200px;
    height: 240px;
    object-fit: cover;
    border: var(--border-width) solid var(--border-color);
  }

  .photo-label {
    background: var(--accent-primary);
    border: var(--border-width) solid var(--border-color);
    padding: 0.4rem 1rem;
    font-weight: var(--fw-md);
    text-transform: uppercase;
    text-align: center;
    margin-top: calc(var(--gap) * 0.75);
    font-size: var(--font-lg);
  }
}

/* Center content */
.hero-center {
  text-align: center;
  max-width: 450px;
}

.hero-headline {
  font-size: 5rem;
  font-weight: var(--fw-md);
  text-transform: uppercase;
  line-height: 0.95;
  margin: 0 0 calc(var(--gap) * 1.5);

  span {
    display: block;

    &:first-child {
      background: var(--accent-primary);
      padding: 0.2rem 0.5rem;
      border: var(--border-width) solid var(--border-color);
      display: inline-block;
      transform: rotate(-2deg);
      margin-bottom: 0.5rem;
    }

    &:last-child {
      background: var(--accent-tertiary);
      padding: 0.2rem 0.5rem;
      border: var(--border-width) solid var(--border-color);
      display: inline-block;
      transform: rotate(1deg);
    }
  }
}

.hero-desc {
  font-size: var(--font-xl);
  font-weight: var(--fw-md);
  margin-bottom: calc(var(--gap) * 1.5);
  line-height: 1.4;
  background: var(--accent-lavender);
  padding: 0.5rem 1rem;
  border: var(--border-width) solid var(--border-color);
  box-shadow: var(--shadow-brutal);
  display: inline-block;
  transform: rotate(1deg);
  max-width: 100%;
}

.hero-cta {
  display: inline-block;
  padding: 1rem 2rem;
  background: var(--card-bg);
  border: var(--border-width) solid var(--border-color);
  box-shadow: var(--shadow-brutal);
  font-size: var(--font-lg);
  font-weight: var(--fw-md);
  text-transform: uppercase;
  transition: all 0.1s ease;

  &:hover {
    transform: translate(-4px, -4px);
    box-shadow: 10px 10px 0 var(--border-color);
    background: var(--accent-lime);
  }
}

/* Floating badges */
.floating-badge {
  position: absolute;
  border: var(--border-width) solid var(--border-color);
  box-shadow: var(--shadow-brutal);
  font-weight: var(--fw-md);
  text-transform: uppercase;
  z-index: 5;
}

.badge-location {
  background: var(--accent-lavender);
  padding: 0.5rem 1rem;
  top: 20%;
  right: calc(50% - 500px);
  transform: rotate(8deg);
}

.badge-arrow {
  background: var(--accent-lime);
  width: 50px;
  height: 50px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: var(--font-xl);
  bottom: 25%;
  right: calc(50% - 420px);
  transform: rotate(-10deg);
}

/* Scroll button */
.scroll-btn {
  position: absolute;
  bottom: calc(var(--gap) * 2);
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0.5rem;
  padding: 0.75rem 1.5rem;
  background: var(--card-bg);
  border: var(--border-width) solid var(--border-color);
  box-shadow: var(--shadow-brutal);
  font-weight: var(--fw-md);
  text-transform: uppercase;
  font-size: var(--fs-md);
  transition: all 0.1s ease;
  z-index: 10;

  svg {
    animation: bounce 2s infinite;
  }

  &:hover {
    transform: translateX(-50%) translateY(-4px);
    box-shadow: 8px 8px 0 var(--border-color);
    background: var(--accent-primary);
  }
}

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(5px); }
}

/* Posts section */
.posts-section {
  .section-title {
    font-weight: var(--fw-md);
    font-size: var(--font-xxl);
    text-transform: uppercase;
    margin-bottom: calc(var(--gap) * 2);
    background: var(--accent-secondary);
    padding: 0.5rem 1.5rem;
    border: var(--border-width) solid var(--border-color);
    box-shadow: var(--shadow-brutal);
    display: inline-block;
  }
}

.posts {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: calc(var(--gap) * 1.5);
}

.post {
  border: var(--border-width) solid var(--border-color);
  background: var(--card-bg);
  box-shadow: var(--shadow-brutal);
  transition: all 0.15s ease;

  .post-link {
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  /* First post spans 2 columns and 2 rows */
  &.featured {
    grid-column: span 2;
    grid-row: span 2;

    .post-image img {
      height: 100%;
      min-height: 400px;
    }

    .post-content {
      padding: calc(var(--gap) * 1.5);
    }

    .post-content h3 {
      font-size: var(--font-xl);
    }
  }

  .post-image {
    overflow: hidden;
    flex: 1;

    img {
      display: block;
      width: 100%;
      height: 160px;
      object-fit: cover;
      transition: transform 0.3s ease;
    }
  }

  .post-content {
    padding: var(--gap);
    display: flex;
    flex-direction: column;
    gap: calc(var(--gap) / 2);
    border-top: var(--border-width) solid var(--border-color);

    h3 {
      font-weight: var(--fw-md);
      font-size: var(--fs-md);
      line-height: 1.3;
      text-transform: uppercase;
    }
  }

  .post-meta {
    font-size: var(--fs-sm);
    color: var(--color-text-light);
  }

  &:hover {
    transform: translate(-4px, -4px);
    box-shadow: 10px 10px 0 var(--border-color);

    .post-image img {
      transform: scale(1.05);
    }
  }
}

@media (max-width: 900px) {
  .posts {
    grid-template-columns: repeat(2, 1fr);
  }

  .post.featured {
    grid-column: span 2;
    grid-row: span 1;

    .post-image img {
      min-height: 250px;
    }
  }
}

@media (max-width: 900px) {
  .hero-inner {
    flex-direction: column;
    gap: calc(var(--gap) * 2);
  }

  .photo-card {
    transform: rotate(-2deg);

    img {
      width: 160px;
      height: 200px;
    }
  }

  .hero-headline {
    font-size: 3.5rem;
  }

  .badge-location {
    top: 10%;
    right: 2%;
  }

  .badge-arrow {
    bottom: 20%;
    right: 3%;
  }

  .deco-rect-1 {
    width: 120px;
    height: 120px;
    top: 3%;
    left: -20px;
  }

  .deco-rect-2 {
    width: 80px;
    height: 140px;
    right: -20px;
  }

  .deco-rect-3 {
    width: 140px;
    height: 60px;
    left: -30px;
  }

  .deco-circle {
    width: 70px;
    height: 70px;
    right: -20px;
  }

  .deco-star-1 {
    width: 60px;
    height: 60px;
    right: 5%;
  }

  .deco-star-2 {
    left: 5%;
  }
}

@media (max-width: 600px) {
  .hero {
    min-height: auto;
    padding: calc(var(--gap) * 4) var(--gap) calc(var(--gap) * 6);
  }

  .scroll-btn {
    bottom: var(--gap);
    padding: 0.5rem 1rem;
    font-size: var(--fs-sm);

    svg {
      width: 20px;
      height: 20px;
    }
  }

  .photo-card {
    padding: calc(var(--gap) * 0.75);

    img {
      width: 130px;
      height: 160px;
    }

    .photo-label {
      font-size: var(--fs-md);
      padding: 0.3rem 0.75rem;
    }
  }

  .hero-headline {
    font-size: 2.5rem;

    span {
      padding: 0.15rem 0.4rem;
    }
  }

  .hero-desc {
    font-size: var(--fs-md);
    padding: 0.4rem 0.75rem;
  }

  .hero-cta {
    font-size: var(--fs-md);
    padding: 0.75rem 1.5rem;
  }

  .badge-location,
  .badge-arrow,
  .scroll-btn {
    display: none;
  }

  .deco-rect-1,
  .deco-rect-3,
  .deco-circle {
    display: none;
  }

  .deco-rect-2 {
    width: 60px;
    height: 100px;
  }

  .deco-star-1 {
    width: 45px;
    height: 45px;
    top: 5%;
    right: 5%;
  }

  .deco-star-2 {
    width: 35px;
    height: 35px;
    bottom: 10%;
    left: 5%;
  }

  .posts-section {
    text-align: center;

    .section-title {
      font-size: var(--font-xl);
    }
  }

  .posts {
    grid-template-columns: 1fr;
  }

  .post.featured {
    grid-column: span 1;

    .post-image img {
      min-height: 200px;
    }
  }

  .post .post-content h3 {
    font-size: var(--fs-md);
  }
}
</style>
