---
import { Picture } from "astro:assets";
import { data } from "~/data/data";

const currentPath = Astro.url.pathname;
const { Content, ...profile } = data.profile;
const currentExperience = await data.experiences.getCurrent()
const links = {
  '/': 'Posts',
  '/about/': 'About',
}
---

<header class="header">
  <div class="header-inner">
    <a class="image" href="/">
      <Picture
        class="picture"
        alt='Profile Picture'
        src={profile.image}
        fetchpriority="high"
        formats={['avif', 'webp', 'jpeg']}
        width={120}
      />
    </a>
    <a class="info" href="/">
      <div class="name">{profile.name}</div>
      {currentExperience && (
        <div class="work">
          {currentExperience.data.position.name} @ {currentExperience.data.company.name}
        </div>
      )}
    </a>
    <nav class="links">
      {Object.entries(links).map(([target, name]) => (
        <a class={currentPath === target ? 'link active' : 'link'} href={target}>{name}</a>
      ))}
    </nav>
  </div>
</header>

<style>
  .header {
    position: sticky;
    top: 0;
    z-index: 100;
    background: var(--accent-primary);
    border-bottom: var(--border-width) solid var(--on-accent);
    padding: 0 20px;
    /* Keep dark text/borders on accent header in both themes */
    --t-fg: var(--on-accent);
    --border-color: var(--on-accent);
    --card-bg: #fff;
    --shadow-brutal: 3px 3px 0 var(--on-accent);
  }

  .header-inner {
    max-width: var(--content-width);
    margin: 0 auto;
    padding: 12px 0;
    display: flex;
    gap: var(--gap);
    align-items: center;
  }

  img {
    width: 44px;
    height: 44px;
    border: 2px solid var(--border-color);
    box-shadow: var(--shadow-brutal);
  }

  .info {
    display: flex;
    flex-direction: column;
    flex: 1;
    gap: 0;

    .name {
      font-weight: var(--fw-md);
      font-size: var(--fs-md);
      color: var(--t-fg);
      text-decoration: none;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .work {
      font-size: var(--fs-sm);
      color: var(--t-fg);
      text-decoration: none;
      font-weight: 500;
      opacity: 0.85;
    }
  }

  .links {
    display: flex;
    gap: 8px;

    .link {
      padding: 8px 16px;
      border: 2px solid var(--border-color);
      font-weight: var(--fw-md);
      font-size: var(--fs-sm);
      text-transform: uppercase;
      background: var(--card-bg);
      box-shadow: var(--shadow-brutal);
      transition: all 0.1s ease;

      &:hover {
        transform: translate(-2px, -2px);
        box-shadow: 5px 5px 0 var(--border-color);
      }

      &.active {
        background: var(--accent-tertiary);
      }
    }
  }

  @media (max-width: 600px) {
    .info .work {
      display: none;
    }

    .links .link {
      padding: 6px 12px;
    }
  }

  @media print {
    .header {
      display: none;
    }
  }
</style>
